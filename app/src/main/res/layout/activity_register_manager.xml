<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterManagerActivity">

    <EditText
        android:id="@+id/managerName"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="149dp"
        android:layout_marginRight="10dp"
        android:hint="Username"
        android:inputType="textAutoComplete" />


    <EditText
        android:id="@+id/managerEmail"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="213dp"
        android:layout_marginRight="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/managerPassword"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="282dp"
        android:layout_marginRight="10dp"
        android:hint="Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/sign_up_manager_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlue"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/alreadyHasAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_manager_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Has an account"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="18dp" />

</RelativeLayout>